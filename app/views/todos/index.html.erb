<section class="todoapp">
  <header class="header">
    <h1>todos</h1>
    <input autofocus class="new-todo" placeholder="What needs to be done?" data-controller="todos" data-action="change->todos#create">
  </header>

  <% if @all_todos.any? %>
    <section class="main">
      <input class="toggle-all" type="checkbox">
      <label data-controller="todos" data-action="click->todos#toggleAll">
        Mark all as complete
      </label>
      <ul class="todo-list">
        <%= render partial: "todo", collection: @filtered_todos %>
      </ul>
    </section>
  <% end %>

  <%= render "/todos/filters" if @all_todos.any? %>
</section>
